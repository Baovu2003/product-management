extends ../../layouts/default.pug
block main
    h1 Thêm mới quyền

    form(
        action=`${prefixAdmin}/roles/create`
        id="form-create-product"
        method="POST"      
    )
        // Title
        div(class="form-group mb-3")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )      

        // Description
        div(class="form-group mb-3")
            label(for="description") Mô tả
            textarea(
                class="form-control"
                id="description"
                name="description"
                rows="4"
            )
        // Create Button
        div(class="form-group mt-4")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới

