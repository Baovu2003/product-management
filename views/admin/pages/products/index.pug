extends ../../layouts/default.pug

block main
    h1 Trang danh sách sản phẩm
    table.table.table-striped.table-bordered
        thead
            tr
                th STT
                th Hình ảnh
                th Sản phẩm
                th Giá
                th Trạng thái               
                th Hành động
        tbody
            tr
                td 1
                td 
                    img(src="https://cdn.dummyjson.com/products/images/beauty/Essence%20Mascara%20Lash%20Princess/thumbnail.png" 
                    alt="sản phẩm" 
                    width="100px" 
                    height="auto")
                td Sản phẩm 1
                td 100,000₫
                td 
                    a(href="#" class="badge bg-success") Hoạt động

                td 
                    button.btn.btn-primary.me-2 Xem chi tiết
                    button.btn.btn-warning.me-2 Chỉnh sửa
                    button.btn.btn-danger Xóa

            tr
                td 2
                td 
                    img(src="https://cdn.dummyjson.com/products/images/beauty/Essence%20Mascara%20Lash%20Princess/thumbnail.png" 
                    alt="sản phẩm" 
                    width="100px" 
                    height="auto")
                td Sản phẩm 2
                td 200,000₫
                td 
                    a(href="#" class="badge bg-danger") Không hoạt động
                td 
                    button.btn.btn-primary Xem chi tiết
                    button.btn.btn-warning Chỉnh sửa
                    button.btn.btn-danger Xóa
