extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
block main
    h1 Trang danh sách sản phẩm

    .card.mb-3
        .card-header Bộ lọc và tìm kiếm 
            .card-body 
             .row
                .col-md-6
                    //-   Chèn mixin để tối ưu code  
                    +filter-status(filterStatus)
                .col-md-6
                    form(id="form-search", class="d-flex justify-content-end")
                        .input-group 
                            input(
                                type="text"
                                placeholder="Enter the key"
                                name="keyword"
                                class="form-control"
                                value=keyword
                            )
                        .input-group-append 
                            button(
                                class="btn btn-success"
                                type="submit"
                            ) Search
                    


    .card.mb-3
        .card-header Danh sách
            .card-body 
                table.table.table-striped.table-bordered
                    thead
                        tr
                            th STT
                            th Hình ảnh
                            th Sản phẩm
                            th Giá
                            th Trạng thái               
                            th Hành động
                    tbody
                        each item,index in products
                            tr
                                td #{index+1}
                                td 
                                    img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px" 
                                    height="auto")
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    if(item.status == "active") 
                                        a(href="#" class="badge bg-success") Hoạt động
                                    else
                                        a(href="#" class="badge bg-danger") Dừng hoạt động
                                    

                                td 
                                    button.btn.btn-primary.me-2 Detail
                                    button.btn.btn-warning.me-2 Update
                                    button.btn.btn-danger Xóa
                

            
