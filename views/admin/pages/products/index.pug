extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi
include ../../mixins/alert.pug
block main
    //- Sử dụng flash bên productController phần change status 
    +alert-success(5000)
    h1 Trang danh sách sản phẩm
      
    .card.mb-3
        .card-header Bộ lọc và tìm kiếm 
            .card-body 
             .row
                .col-md-6
                    //-   Chèn mixin filter để tối ưu code  
                    +filter-status(filterStatus)
                .col-md-6
                    //- Chèn mixin search để tối ưu code
                    +search(keyword)
                    


    .card.mb-3
        .card-header Danh sách
            .card-body 
                //- Mixin form-change-multi
                +form-change-multi (`${prefixAdmin}/products/change-multi?_method=PATCH`)               
                table(
                   class=" table table-striped table-bordered"
                   checkbox-multi
                )
                    thead
                        tr
                            th 
                                input(type="checkbox" name="checkall")
                            th STT
                            th Hình ảnh
                            th Sản phẩm
                            th Giá
                            th Position
                            th Trạng thái               
                            th Hành động
                    tbody
                        each item,index in products
                            tr  
                                td 
                                    input(type="checkbox" name="id" value= item.id)
                                td #{index+1}
                                td 
                                    img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px" 
                                    height="auto")
                                td #{item.title}
                                td #{item.price}$
                                td 
                                  input(
                                    type="number"
                                    value=item.position
                                    min="1"
                                    style="width: 60px; border-radius: 5px;"
                                    name="position"
                                  )
                                td 
                                    if(item.status == "active") 
                                        a(
                                            href="javascript:;" 
                                            data-status = item.status
                                            data-id = item.id
                                            button-change-status
                                            class="badge bg-success") Hoạt động
                                    else
                                        a(
                                            href="javascript:;" 
                                            data-status = item.status
                                            data-id = item.id
                                            button-change-status
                                            class="badge bg-danger") Dừng hoạt động
                                    

                                td 
                                    button.btn.btn-primary.me-2 Detail
                                    button.btn.btn-warning.me-2 Update
                                    button(
                                        class="btn btn-danger"
                                        data-id = item.id
                                        button-delete
                                    ) Delete
    //- Mixin pagintion
    +pagination(pagination)   
    //------------------- FORM ĐỂ CHỈNH SỬA TRẠNG THÁI--------------------------- --
    form(
        action="",
        method="POST"
        data-path=`${prefixAdmin}/products/change-status`
        id="form-change-status"
        )
    //------------------- FORM ĐỂ DELETE ITEM--------------------------- --
    form(
        action="",
        method="POST"
        data-path=`${prefixAdmin}/products/delete`
        id="form-delete-item"
        ) 


    script(src="/admin/js/product.js")

    
    