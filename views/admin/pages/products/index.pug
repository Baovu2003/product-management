extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
block main
    h1 Trang danh sách sản phẩm

    .card.mb-3
        .card-header Bộ lọc và tìm kiếm 
            .card-body 
             .row
                .col-md-6
                    //-   Chèn mixin filter để tối ưu code  
                    +filter-status(filterStatus)
                .col-md-6
                    //- Chèn mixin search để tối ưu code
                    +search(keyword)
                    


    .card.mb-3
        .card-header Danh sách
            .card-body 
                form(
                    action=`${prefixAdmin}/products/change-multi?_method=PATCH`,
                    method="POST"                 
                    form-change-multi
                    ) 
                     .d-flex.align-items-start 
                            .form-group     
                                select(name="type" class="form-select")
                                    option(value="active") Hoạt động
                                    option(value="inactive") Dừng hoạt động
                            .form-group   
                                input(
                                    type="text"
                                    name="ids"
                                    value=""
                                    class="form-control d-none"
                    )
                            button(type="submit" class="btn btn-primary") Apply                
                table(
                   class=" table table-striped table-bordered"
                   checkbox-multi
                )
                    thead
                        tr
                            th 
                                input(type="checkbox" name="checkall")
                            th STT
                            th Hình ảnh
                            th Sản phẩm
                            th Giá
                            th Trạng thái               
                            th Hành động
                    tbody
                        each item,index in products
                            tr  
                                td 
                                    input(type="checkbox" name="id" value= item.id)
                                td #{index+1}
                                td 
                                    img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px" 
                                    height="auto")
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    if(item.status == "active") 
                                        a(
                                            href="javascript:;" 
                                            data-status = item.status
                                            data-id = item.id
                                            button-change-status
                                            class="badge bg-success") Hoạt động
                                    else
                                        a(
                                            href="javascript:;" 
                                            data-status = item.status
                                            data-id = item.id
                                            button-change-status
                                            class="badge bg-danger") Dừng hoạt động
                                    

                                td 
                                    button.btn.btn-primary.me-2 Detail
                                    button.btn.btn-warning.me-2 Update
                                    button.btn.btn-danger Xóa
    //- Mixin pagintion
    +pagination(pagination)        
    form(
        action="",
        method="POST"
        data-path=`${prefixAdmin}/products/change-status`
        id="form-change-status"
        ) 



    script(src="/admin/js/product.js")

    
    