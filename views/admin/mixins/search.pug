mixin search(keyword)
                    form(id="form-search", class="d-flex justify-content-end")
                        .input-group 
                            input(
                                type="text"
                                placeholder="Enter the key"
                                name="keyword"
                                class="form-control"
                                value=keyword
                            )
                        .input-group-append 
                            button(
                                class="btn btn-success"
                                type="submit"
                            ) Search